<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="filter-header">Tipo <span>Seleccione para filtrar</span></h4>
      <div class="list-group filter-type">
        <% @types.each do |type|%>
          <%= link_to type.name, { controller: 'expenses', action: 'index', :type_id => type.id }, class: 'list-group-item' %>
        <% end %>
      </div>
      <h4 class="filter-header">Categoría <span>Selecciona para filtrar</span></h4>
      <div class="list-group filter-type">
        <% @categories.each do |category|%>
          <%= link_to category.name, { controller: 'expenses', action: 'index', :category_id => category.id }, class: 'list-group-item' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9 index-data">
      <div class="row" style="margin-top: 10px;">
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_human( @expenses.sum( :value ) ) %></div>
          <div class="summary-label">Total</div>
        </diV>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_human( @expenses.count ) %></div>
          <div class="summary-label">Transacciones</div>
        </div>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value"><%= number_to_human( @expenses.average ( :value ) ) %></div>
          <div class="summary-label">Promedio</div>
        </div>
      </div>

      <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
          <a href="#" class="btn btn-success pull-left"><span class="glyphicon glyphicon-plus"></span> Nuevo gasto</a>
          <h4 class="dropdown pull-right">
            <button type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown">Abril 2020 <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li role="presentation"><a href="#">Mayo 2020</a></li>
              <li role="presentation"><a href="#">Abril 2020</a></li>
              <li role="presentation"><a href="#">Marzo 2020</a></li>
              <li role="presentation"><a href="#">Febrero 2020</a></li>
              <li role="presentation"><a href="#">Enero 2020</a></li>
              <li role="presentation"><a href="#">Diciembre 2019</a></li>
              <li role="presentation"><a href="#">Noviembre 2019</a></li>
              <li role="presentation"><a href="#">Octubre 2019</a></li>
              <li role="presentation"><a href="#">Septiembre 2019</a></li>
              <li role="presentation"><a href="#">Agosto 2019</a></li>
              <li role="presentation"><a href="#">Julio 2019</a></li>
            </ul>
          </h4>
        </div>
      </div>

      <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th class="text-center">Día</th>
            <th>Concepto</th>
            <th class="text-right">Categoría</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody>
          <% @expenses.each do |expense|%>
          <tr>
            <td class="expense_date">
              <div class="day"><%= expense.expense_date.day %></div>
              <div class="month"><%= expense.expense_date.strftime("%b") %></div>
            </td>
            <td>
              <div>
                <span class="type"><%= expense.type.name  %></span>
              </div>
              <div>
                <span class="concept"><%= expense.concept %></span>
              </div>
            </td>
            <td class="category text-right"><%= expense.category.name %></td>
            <td class="text-right" style="width: 170px;">
              <div class="amount"><%= expense.value %></div>
              <div class="actions">
                <a href="#"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                <a href="#"><span class="glyphicon glyphicon-trash"></span> Borrar</a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
